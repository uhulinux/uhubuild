#!/bin/bash -eu

# a ccache bezavarhat a configure lépésnél
# pl. webkit2gtk nem találja a pthread.h-t
export DISABLE_CCACHE=1

if [ -f meson.build ]; then
    builddir="build"
	argv=()
	argx=(
		--prefix="/usr"             \
		--sysconfdir="/etc"         \
		--localstatedir="/var"      \
		--mandir="/usr/share/man"   \
		--infodir="/usr/share/info" \
		--backend=ninja		        \
		--buildtype=release         \
		--default-library=shared	\
	)
	for i in "${argx[@]}"; do
		argv[${#argv[@]}]="$i"
	done
	# be verbose :)
	echo "meson setup ${builddir}"
	for i in "$@" "${argv[@]}"; do
		echo -e "\t$i"
	done
	
	meson setup ${builddir} \
		"$@" "${argv[@]}"
	meson compile \
		-C ${builddir}
fi

if [ -f CMakeLists.txt ]; then
    builddir="build"
	argv=()
	argx=(
        -GNinja \
	    -DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX="/usr" \
	)
	for i in "${argx[@]}"; do
		argv[${#argv[@]}]="$i"
	done
	# be verbose :)
	echo "cmake"
	for i in "$@" "${argv[@]}"; do
		echo -e "\t$i"
	done

	mkdir -p ${builddir}
	cd ${builddir}
	cmake \
		"$@" "${argv[@]}" \
		..
fi

if [ -f "configure" -a ! -f CMakeLists.txt -a ! -f meson.build ]; then
	ub_configure "$@"
else
	if [ -f "autogen.sh" -a ! -f CMakeLists.txt -a ! -f meson.build ]; then
		NOCONFIGURE=1 ./autogen.sh && ub_configure "$@"
	fi
	if [ ! -f "configure" -a ! -f "autogen.sh" -a ! -f CMakeLists.txt -a ! -f meson.build ]; then
	    if [ -f configure.ac -o -f configure.in ]; then
		    autoreconf -vif && ub_configure "$@"
		fi
	fi
fi

if [ -f Makefile.PL ]; then
	perl Makefile.PL "$@"
fi

if [ -f Build.PL ]; then
	perl Build.PL "$@"
	exec ./Build
fi

exec ub_make
